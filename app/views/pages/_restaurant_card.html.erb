<div class="restaurant" id="restaurant_<%= restaurant.id %>" data-telephone="<%= restaurant.phone_number || '' %>" data-address="<%= restaurant.paramaterised_address || '' %>">
  <div class="photos">
    <div class="first_row">
      <% restaurant.best_photos[0..2].each_with_index do |photo, index| %>
        <a href="<%= photo.high_resolution_url %>" class="swipebox" rel="gallery-<%= restaurant.id %>"><img src="<%= photo.low_resolution_url %>" class="image image_<%= (index + 1).to_s %>"></a>
      <% end %>
      <div class="clear"></div>
    </div>
  </div>
  <div class="name">
    <div class="left">
      <%= restaurant.name %>
    </div>
    <div class="right">
      <%= '%.1f' % restaurant.distance_to( @lat_lng ) %> km
    </div>
    <div class="clear"></div>
  </div>
  <div class="details">
    <div class="description">
      <%= restaurant.description %>
      <div class="price">
        <%= restaurant.price_html.html_safe %>
      </div>
    </div>

  </div>
</div>
